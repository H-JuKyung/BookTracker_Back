<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.tracker.dao.BookDao">  

    <insert id="insertBook" parameterType="Book">
        INSERT INTO book (title, author, publisher, cover, status)
        VALUES (#{title}, #{author}, #{publisher}, #{cover}, #{status});
    </insert>


<update id="updateBook" parameterType ="String">
   update book set status=#{status} where title=#{title}
   </update>

<select id ="getAllBooks" resultType="Book">
	 	select * from book 
	</select>
	
	<select id ="getTitleBook" parameterType ="String" resultType = "Book">
	select * from book where title =#{title}
	</select>
	
<select id="getBooksByStatus" parameterType="string" resultType="Book">
    select * from book where status = #{status}
</select>





</mapper>
